<Page 
    x:Class="MabiCookerV3.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MabiCookerV3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage"
      Background="#0077BB" 
      >

    <Grid>
        <StackPanel Margin="1">
            <Label>WindowSize</Label>
            <ComboBox Name="WindowSizeOption" SelectionChanged="WindowSizeOption_SelectionChanged">
                <ComboBoxItem>1080p</ComboBoxItem>
                <ComboBoxItem>1440p(2k)</ComboBoxItem>
                <ComboBoxItem>2160p(4k)</ComboBoxItem>
            </ComboBox>
            <Label>Font</Label>
            <ComboBox>
                <ComboBoxItem IsSelected="True">True Type</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
